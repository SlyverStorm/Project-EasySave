<Window x:Class="EasySave_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">
    <Grid ShowGridLines="true" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="360*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="190*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="EasySave v.2.0" TextWrapping="Wrap" FontSize="60" FontWeight="Bold"/>

        <!-- Launch Save Procedure -->
        <Button Name="SaveProcedure" Content="Launch save procedure" Grid.Column="2" Grid.Row="1" Margin="40,15,40,15" Background="#FFE7F4FD" FontSize="20" FontWeight="Bold" FontStyle="Normal" Click="launchSaveProcedure_Click"/>

        <!-- Create Save Procedure -->
        <Button Name="fileEncryption" Content="File Encryption" Grid.Column="2" Grid.Row="2" Margin="40,15,40,15" Background="#FFE7F4FD" FontSize="20" FontWeight="Bold" FontStyle="Normal" Click="createSaveProcedure_Click"/>
        
    </Grid>
</Window>
