<Window x:Class="EasySave_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">
    <Grid ShowGridLines="True" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>

        <!--#region Header-->
        <Label x:Name="title" Content="EasySave 2.0" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <!--#endregion-->

        <!--#region Save Form-->
        <Label Name="saveNameLabel" Content="Name" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="saveNameForm" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Height="25" VerticalContentAlignment="Center"/>
        <Label Name="sourcePathLabel" Content="Source Path" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="saveSourcePathForm" Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Height="25" VerticalContentAlignment="Center"/>
        <Label Name="destinationPathLabel" Content="Destination Path" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="saveDestinaitonPathForm" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Height="25" VerticalContentAlignment="Center"/>
        <Label Name="saveTypeLabel" Content="Save Type" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <ComboBox x:Name="saveTypeForm" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center" Width="600" Height="25">
            <ComboBoxItem IsSelected="True">Complete</ComboBoxItem>
            <ComboBoxItem>Differential</ComboBoxItem>
        </ComboBox>
        <Label Content="Encryption" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <ComboBox x:Name="pickEncryptionForm" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Height="25" VerticalContentAlignment="Center">
            <ComboBoxItem IsSelected="True">wait for binding</ComboBoxItem>
        </ComboBox>
        <!--#endregion-->

        <!--#region Confirm Form-->
        <Button x:Name="saveConfirmForm" Content="Confirm" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Margin="10" FontSize="14" Height="25" FontWeight="DemiBold" Click="saveConfirmForm_Click"/>
        <!--#endregion-->

        <!--#region Delete Save-->
        <Button x:Name="deleteSave" Content="Delete" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="6" Margin="10" FontSize="14" Height="25" FontWeight="DemiBold"/>
        <!--#endregion-->

        <!--#region Save List-->
        <ListView x:Name="saveList" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" ItemsSource="{Binding Save}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding SaveId}" Width="140"/>
                    <GridViewColumn Header="Source Path" DisplayMemberBinding="{Binding SourcePath}" Width="200" />
                    <GridViewColumn Header="Destination Path" DisplayMemberBinding="{Binding DestinationPath}" Width="200" />
                    <GridViewColumn Header="Save Type" DisplayMemberBinding="{Binding SaveType}" Width="100" />
                    <GridViewColumn Header="Encryption" DisplayMemberBinding="{Binding EncryptedFile}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
        <!--#endregion-->
    </Grid>
</Window>
